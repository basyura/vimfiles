snippet     func
      function! s:${1}
        ${2}
      endfunction

snippet     augroup
      augroup ${1}
        autocmd!
        ${2}
      augroup END

snippet command
abbr command call function
options head
    command! ${1:#:command_name} call ${2:#:func_name}


snippet main
  function! s:main()
    echo 'hello'${1}
  endfunction

  call s:main()



